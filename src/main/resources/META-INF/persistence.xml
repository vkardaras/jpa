<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="my-persistence-unit" transaction-type="RESOURCE_LOCAL">

        <!-- Provider Hibernate Core Dependecy -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Register all models -->
        <class>youprojetc.model.yourclass</class>

        <properties>

            <!-- DB Driver -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>

            <!-- JDBC URL Server:Port/DBName -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/jpa_demo"/>

            <!-- DB User -->
            <property name="jakarta.persistence.jdbc.user" value="user"/>

            <!-- DB Pass -->
            <property name="jakarta.persistence.jdbc.password" value="password"/>

            <!-- Attention, this option can cause data destroy in db. Use caution.
                Values: validate, update, create, create-drop -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- Show SQL in console-->
            <property name="hibernate.show_sql" value="true"/>

            <!-- Show SQL formatted -->
            <property name="hibernate.format_sql" value="true"/>

        </properties>

    </persistence-unit>
</persistence>